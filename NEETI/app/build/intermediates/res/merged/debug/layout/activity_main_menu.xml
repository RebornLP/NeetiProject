<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:weightSum="1"
    tools:context="pt.ulisboa.tecnico.neeti.MainMenu">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:weightSum="10"
        android:layout_weight="1"
        android:id="@+id/commonlayout" android:background="#FFFFFF">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:weightSum="5"
        android:paddingTop="@dimen/appbar_padding_top"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_gravity="top|right">

        <ImageView
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/logo"
            android:longClickable="false"
            android:foregroundGravity="top|center_horizontal"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:paddingBottom="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/neeti_full"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:textSize="10dp" />

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_height="400dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_weight="6" />

    <LinearLayout android:id="@+id/llfooter"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:visibility="visible" android:background="#102B57"
        android:weightSum="6" android:gravity="bottom|center"
        android:layout_weight="1"
        android:measureWithLargestChild="false"
        android:layout_gravity="top|bottom|center_horizontal">

        <Button android:id="@+id/btn_neeti" android:layout_height="wrap_content"
            android:layout_width="wrap_content"  android:layout_weight="1"
            android:background="@drawable/neeti"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>

        <Button android:id="@+id/btn_cadeiras" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:layout_weight="1"
            android:background="@drawable/cadeiras"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>

        <Button android:id="@+id/btn_requisitos" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:layout_weight="1"
            android:background="@drawable/unknown"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>

        <Button android:id="@+id/btn_eventos" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:layout_weight="1"
            android:background="@drawable/eventos"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>

        <Button android:id="@+id/btn_tagus" android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:layout_weight="1"
            android:background="@drawable/unknown"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>

        <Button android:layout_height="wrap_content" android:id="@+id/btn_contacto"
            android:background="@drawable/contacto" android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"></Button>
    </LinearLayout>
    </LinearLayout>




</android.support.design.widget.CoordinatorLayout>
